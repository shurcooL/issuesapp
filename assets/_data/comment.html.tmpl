<html>
	<head>
		{{template "head" .}}
	</head>
	<body>
		<div style="background-color: lightgray;">content</div>
		{{template "comment" .Comment}}
		<div style="background-color: lightgray;">content</div>
	</body>
</html>

{{/* Dot is an issues.Comment. */}}
{{define "comment"}}
<div class="comment-edit-container">
	<div>
		<div class="avatar-container">
			<a href="{{.User.HTMLURL}}" target="_blank" tabindex=-1>
				<img class="comment-avatar" width="48" height="48" src="{{.User.AvatarURL}}">
			</a>
		</div>
		<div id="comment-{{.ID}}" style="display: flex;" class="list-entry">
			<div class="list-entry-container list-entry-border">
				<div class="list-entry-header" style="display: flex;">
					<span class="content">{{template "user" .User}} commented <a class="black" href="#comment-{{.ID}}" onclick="AnchorScroll(this, event);">{{template "time" .CreatedAt}}</a>
						{{with .Edited}} Â· <span style="cursor: default;" title="{{.By.Login}} edited this comment {{reltime .At}}.">edited{{if not (equalUsers $.User .By)}} by {{.By.Login}}{{end}}</span>{{end}}
					</span>
					{{if (not state.DisableReactions)}}
						<span class="right-icon">{{newReaction (reactableID .ID)}}</span>
					{{end}}
					{{if .Editable}}<span class="right-icon"><a href="javascript:" title="Edit" onclick="EditComment({{`edit` | json}}, this);"><span class="octicon octicon-pencil"></span></a></span>{{end}}
				</div>
				<div class="list-entry-body">
					<div class="markdown-body">
						{{with .Body}}
							{{. | gfm}}
						{{else}}
							<i class="gray">No description.</i>
						{{end}}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div style="display: none;">
		{{template "edit-comment" .}}
	</div>
	{{if (not state.DisableReactions)}}
		{{reactionsBar .Reactions (reactableID .ID)}}
	{{end}}
</div>
{{end}}

{{define "user"}}
<a class="black" href="{{.HTMLURL}}" target="_blank"><strong>{{.Login}}</strong></a>
{{end}}

{{define "time"}}<abbr title="{{.Format "Jan 2, 2006, 3:04 PM MST"}}">{{reltime .}}</abbr>{{end}}
