<html>
	<head>
		{{template "head" .}}
	</head>
	<body>
		<div style="background-color: lightgray;">content</div>
		{{template "new-comment" .}}
		<div style="background-color: lightgray;">content</div>
	</body>
</html>

{{define "new-comment"}}
<div style="display: flex;" class="list-entry">
	<div>
		<a href="{{.CurrentUser.HTMLURL}}" target="_blank">
			<img class="comment-avatar" width="48" height="48" src="{{.CurrentUser.AvatarURL}}">
		</a>
	</div>
	<div class="list-entry-border" style="flex-grow: 1;">
		<div class="list-entry-header tabs" style="display: flex;">
			<span style="flex-grow: 1; font-size: 14px;">
				<a id="write-tab-link" class="black tab-link active" href="javascript:SwitchWriteTab();">Write</a>
				<a id="preview-tab-link" class="black tab-link" href="javascript:MarkdownPreview();">Preview</a>
			</span>
			<span class="gray"><span style="margin-right: 6px;" class="octicon octicon-markdown"></span>Markdown supported</span>
		</div>
		<div class="list-entry-body">
			<textarea id="comment-editor" placeholder="Leave a comment"></textarea>
			<div id="comment-preview" class="markdown-body" style="padding: 10px; min-height: 100px; display: none;"></div>
			<div style="text-align: right; margin-top: 10px;">{{template "toggle-button" (printf .Issue.State)}}<button class="btn btn-success btn-small" onclick="PostComment();">Comment</button></div>
		</div>
	</div>
</div>
{{end}}
