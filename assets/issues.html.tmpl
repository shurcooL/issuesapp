<html>
	<head>
		<link href="/assets/style.css" rel="stylesheet" type="text/css" />
		<script src="/assets/script/script.js" type="text/javascript"></script>
		<link href="//cdnjs.cloudflare.com/ajax/libs/octicons/2.1.2/octicons.css" media="all" rel="stylesheet" type="text/css" />
	</head>
	<body>
		{{template "issues" .Issues}}
		<pre>{{dump .Issues}}</pre>
	</body>
</html>

{{define "issues"}}
<div class="list-entry">
	<div class="list-entry-header">
		{{len $}} Open
	</div>
	{{range .}}
	<div class="list-entry-body multilist-entry">
		<div style="display: flex;">
			<span style="margin-right: 6px; color: #6cc644;" class="octicon octicon-issue-opened"></span>
			<div style="flex-grow: 1;">
				<div><a class="black" href="issues/{{.Number}}"><strong>{{.Title}}</strong></a></div>
				<div class="gray tiny">#{{.Number}} opened {{template "time" .CreatedAt}} by {{.User.Login}}</div>
			</div>
		</div>
	</div>
	{{end}}
</div>
{{end}}
